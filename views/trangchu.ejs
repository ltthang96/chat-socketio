<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Chat</title>
	<script src="jquery.js"></script>
	<script src="socket.io/socket.io.js"></script>
	<script src="xuly.js"></script>
	<link rel="stylesheet" type="text/css" href="layout.css">
</head>
<body>
	<div id=wrapper>
		<div id="loginForm">
			<h3>What's your name?</h3>
			<input type="text" id="txtUserName"/>
			<input type="button" value="Register" id="btnRegister">
		</div>

		<div id="chatForm">
			<div id="left">
				<div id="boxTitle">User Online</div>
				<div id="boxContent"></div>
				<div id="boxTitle">Chat room</div>
				<div id="roomchat">
					<input type="button" id="btnRoom1" value="Room 1">
					<!-- <input type="button" id="btnRoom2" value="Room 2"> -->
					<!-- <input type="button" id="btnRoom3" value="Room 3"> -->
				</div>
			</div>
			<div id="right">
				<div id="sayHi">Hello <span id="currentUser"></span>
				<input type="button" id="btnLogout" value="Log out">
				</div>
				<div id="sayHiRoom">You are in room <span id="currentRoom"> </span>
				<input type="button" id="btnLeaveRoom" value="Leave">
				</div>
				<div id="listMessages">
				</div>
				<div id="thongbao"></div>
				<div id="messages">
				<input  type="text" id="txtMessages" placeholder="Input text...">
				<input  type="button" id="btnSendMessages" value="Send">
				</div>
				<div id="listMessagesRoom">
				</div>
				<div id="thongbaoRoom"></div>
				<div id="messagesRoom">
				<input  type="text" id="txtMessagesRoom" placeholder="Input text...">
				<input  type="button" id="btnSendMessagesRoom" value="Send">
				</div>
			</div>
		</div>
	</div>
</body>
</html>